root = true

[*]
end_of_line = LF
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 80

[*.php]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.sh]
indent_style = tab

[*.go]
indent_style = tab

[Makefile]
indent_style=tab
